                        <!--&lt;!&ndash;log4j-*.jar&ndash;&gt;-->
                        <!--&lt;!&ndash;</tomcat.util.scan.DefaultJarScanner.jarsToSkip>&ndash;&gt;-->
                    <!--</systemProperties>-->
                <!--</configuration>-->
            <!--</plugin>-->
        </plugins>
    </build>
</project>
